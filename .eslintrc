{
    "extends": [
        "react-app"
    ],
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "react/jsx-curly-brace-presence": [
            "error",
            {
                "props": "always",
                "children": "always",
                "propElementValues": "always"
            }
        ],
        "eol-last": [
            "error",
            "always"
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1,
                "maxEOF": 1
            }
        ],
        "object-curly-newline": [
            "error",
            {"multiline":true}
        ],
        "object-property-newline": "error"
    }
}